<% layout('../views/partials/header') -%>
 
<div class="container">

    <div class="jumbotron text-center">

        <form action="/createQuestion" method="post">
            <div class="form-group">
                <label>Question:</label>
                <input type="text" class="form-control" name="question">
            </div>
            <div class="form-group">
                <label>Answer:</label>
                <textarea type="text" class="form-control" name="answer"></textarea>
            </div>

            <button type="submit" class="btn btn-warning btn-lg">Submit Quesiton</button>
        </form>

        <% if(typeof questions == 'undefined') { %>
            <ul>
                <% questions.forEach(function(question){ %>
                    <li><%= question.questionTitle %></li>
                    <li>created by: <%= question.questionName %></li>
                    <li><%= question.questionAnswer %></li>
                <% })%>
            </ul>
        <% } %>

    </div>

</div>